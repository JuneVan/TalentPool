@model Une.TalentPool.Web.Models.EvaluationViewModels.CreateOrEditQuestionViewModel
@{
    ViewData["PageHeader"] = "技术评测管理";
    ViewData["Title"] = "创建一条新的技术问题记录";
}
<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <form role="form" method="post" asp-action="CreateQuestion" asp-controller="Evaluation">
                <input type="hidden" asp-for="EvaluationId" />
                <input type="hidden" asp-for="SubjectId" />
                <div class="card-body">
                    <div class="form-group">
                        <label>描述</label>
                        <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>参考答案</label>
                        <textarea class="form-control" rows="5" asp-for="ReferenceAnswer"></textarea>
                    </div>
                    <div class="form-group">
                        <label>排序</label>
                        <input class="form-control" value="0" type="number" asp-for="Order" />
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">提交</button>
                    <a asp-action="Questions" asp-route-SubjectId="@Model.SubjectId" asp-route-EvaluationId="@Model.EvaluationId" class="btn btn-default">返回问题列表</a>
                    <a asp-action="List" class="btn btn-default">返回评测列表</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section styles {
    <link href="~/lib/summernote/summernote-bs4.min.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/lib/summernote/summernote-bs4.min.js"></script>
    <script>
        $("textarea[name='ReferenceAnswer']").summernote();
    </script>
}
