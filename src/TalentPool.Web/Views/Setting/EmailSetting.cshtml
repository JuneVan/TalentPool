@model TalentPool.Web.Models.SettingViewModels.EmailSettingViewModel
@{
    ViewData["PageHeader"] = "系统配置";
    ViewData["Title"] = "邮箱配置";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Setting" asp-action="EmailSetting">
            <div class="form-group">
                <label>SMTP主机名</label>
                <input type="text" class="form-control" asp-for="HostName">
                <span asp-validation-for="HostName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>SMTP端口</label>
                <input type="text" class="form-control" asp-for="Port">
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>邮箱登录账户</label>
                <input type="text" class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>邮箱登录密码</label>
                <input type="text" class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>发件人名称</label>
                <input type="text" class="form-control" asp-for="DisplayName">
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" id="Enable" type="checkbox" asp-for="Enable">
                    <label for="Enable">是否启用SMTP邮箱功能</label>
                </div> 
            </div>
            <button type="submit" class="btn btn-primary">保存</button>
        </form>
    </div>
</div>