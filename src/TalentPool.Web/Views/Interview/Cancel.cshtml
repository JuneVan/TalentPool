@model TalentPool.Web.Models.InterviewViewModels.CancelInterviewViewModel
@{
    ViewData["PageHeader"] = "面试预约管理";
    ViewData["Title"] = "取消面试预约 - " + Model.Name;
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">
                    操作提示
                </h3>
            </div>
            <form role="form" asp-controller="Interview" asp-action="Cancel" method="post">
                <input type="hidden" asp-for="Id">
                <div class="card-body">
                    <i class="fas fa-question-circle fa-2x"></i> 请问是否确定取消 "@Model.Name" 的面试预约记录吗？
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-danger">确定</button>
                    <a asp-action="List" class="btn btn-default">返回预约列表</a>
                </div>
            </form>
        </div>
    </div>
</div>