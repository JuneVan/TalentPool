@model TalentPool.Web.Models.ResumeViewModels.RemoveAttachmentViewModel
@{ ViewData["PageHeader"] = "简历库管理";
    ViewData["Title"] = "删除一条简历附件记录 - " + Model.Name; }

<div class="row">
    <div class="col-md-6">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">
                    操作提示
                </h3>
            </div>
            <form role="form" asp-action="RemoveAttachment" method="post">
                <input type="hidden" asp-for="Id">
                <input type="hidden" asp-for="AttachmentId">
                <div class="card-body">
                    <i class="fas fa-question-circle fa-2x"></i>  请问是否确定删除 "@Model.Name" 的附件文件“@Model.FileName”吗？
                    数据删除是不可恢复的，请谨慎操作！
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-danger">确定</button>
                    <a asp-action="List" class="btn btn-default">返回列表</a>
                </div>
            </form>
        </div>
    </div>
</div>