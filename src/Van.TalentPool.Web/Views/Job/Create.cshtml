@model Van.TalentPool.Web.Models.JobViewModels.CreateOrEditJobViewModel
@{
    ViewData["PageHeader"] = "职位管理";
    ViewData["Title"] = "创建一条新的职位记录";
}
<div class="card">
    <div class="card-header">
        <h5 class="card-title">@ViewData["Title"]</h5>
    </div>
    <form role="form" asp-action="Create" method="post">
        <div class="card-body">
            <div asp-validation-summary="All"></div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label>岗位名称</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label>薪水范围</label>
                    <input type="text" asp-for="SalaryRange" class="form-control" />
                    <span asp-validation-for="SalaryRange" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label>性别要求</label>
                    <input type="text" asp-for="GenderRange" class="form-control" />
                    <span asp-validation-for="GenderRange" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label>年龄要求</label>
                    <input type="text" asp-for="AgeRange" class="form-control" />
                    <span asp-validation-for="AgeRange" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label>任职要求</label>
                    <textarea type="text" asp-for="Requirements" class="form-control"></textarea>
                </div>
                <div class="form-group col-md-12">
                    <label>岗位职责</label>
                    <textarea type="text" asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="form-group col-md-12">
                    <label>关键词</label>
                    <textarea type="text" asp-for="Keywords" class="form-control"></textarea>
                    <span asp-validation-for="Keywords" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label>特别说明</label>
                    <textarea type="text" asp-for="Remark" class="form-control"></textarea>
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Enable">
                        <label class="form-check-label" asp-for="Enable">可用</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">提交</button>
            <a asp-action="List" class="btn btn-default">返回列表</a>
        </div>
    </form>
</div>
@section styles {
    <link href="~/lib/summernote/summernote-bs4.min.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/lib/summernote/summernote-bs4.min.js"></script>
    <script src="~/lib/summernote/lang/summernote-zh-CN.min.js"></script>
    <script>
        $(function () {
            $("textarea[name='Requirements'],textarea[name='Description'],textarea[name='Remark']").summernote({
                lang: 'zh-CN',
                fontsize: '16',
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['fontsize', ['fontsize']],
                    ['fontname', ['fontname']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['height', ['height']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'hr']],
                    ['view', ['fullscreen', 'codeview']]
                ]
            });
        })
    </script>
}