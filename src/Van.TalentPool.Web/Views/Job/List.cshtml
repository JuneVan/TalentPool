@model PaginationModel<Van.TalentPool.Application.Jobs.JobDto>
@{
    ViewData["PageHeader"] = "职位管理";
    ViewData["Title"] = "职位列表";
}


<div class="row">
    <div class="col-12">
        @await Html.PartialAsync("Partials/_ActionPartial", new ActionViewModel("新建职位", "/Job/Create", string.Empty, "btn-sm btn btn-primary", "fas fa-plus"))
    </div>
</div>


<div class="card mt-3">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form asp-action="List" method="get">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="请输入关键词" name="Keyword" autocomplete="off" value="@Model.Parameter.Keyword">
                </div>
                <div class="col-md-6  text-md-right">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                        搜索
                    </button>
                </div>
            </div>
        </form>
        <div class="row mt-3">
            <div class="col-md-12 table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>标题</th>
                            <th>性别要求</th>
                            <th>薪资待遇</th>
                            <th>年龄范围</th>
                            <th>状态</th>
                            <th>时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Title </td>
                                <td>@item.GenderRange </td>
                                <td>@item.SalaryRange </td>
                                <td>@item.AgeRange </td>
                                <td>
                                    @if (item.Enable)
                                    {
                                        <span class="badge badge-success">正常</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">不可用</span>
                                    }
                                </td>
                                <td>@item.CreationTime </td>
                                <td>
                                    <div class="btn-group  btn-group-sm" role="group">
                                        <button id="group-dropdown" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-cog"></i> 操作菜单
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="group-dropdown">
                                            @await Html.PartialAsync("Partials/_ActionPartial", new ActionViewModel("编辑", "/Dictionary/Edit/" + item.Id, Pages.Configuration_Dictionary_CreateOrEditOrDelete, "dropdown-item"))
                                            @await Html.PartialAsync("Partials/_ActionPartial", new ActionViewModel("删除", "/Dictionary/Delete/" + item.Id, Pages.Configuration_Dictionary_CreateOrEditOrDelete, "dropdown-item"))
                                            @await Html.PartialAsync("Partials/_ActionPartial", new ActionViewModel("编辑", "/Job/Edit/" + item.Id, string.Empty, "dropdown-item"))
                                            @await Html.PartialAsync("Partials/_ActionPartial", new ActionViewModel("删除", "/Job/Delete/" + item.Id, string.Empty, "dropdown-item"))
                                        </div>
                                    </div>
                                    <div class="btn-group  btn-group-sm">
                                        @await Html.PartialAsync("Partials/_ActionPartial", new ActionViewModel("编辑", "/Job/Edit/" + item.Id, Pages.Authorization, "btn btn-default")) 
                                        @await Html.PartialAsync("Partials/_ActionPartial", new ActionViewModel("删除", "/Job/Delete/" + item.Id, string.Empty, "btn btn-danger"))
                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer">
        @await Html.PartialAsync("Partials/_PaginationPartial", Model)
    </div>
</div>
