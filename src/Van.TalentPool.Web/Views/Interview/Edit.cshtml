@model Van.TalentPool.Web.Models.InterviewViewModels.CreateOrEditInterviewViewModel
@{ ViewData["Header"] = "面试预约管理";
                ViewData["Title"] = "编辑一条预约记录"; }
<div class="row">
    <div class="col-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <form role="form" method="post" asp-controller="Interview" asp-action="Edit">
                <input type="hidden" asp-for="Id">
                <input type="hidden" asp-for="ResumeId">
                <div class="card-body">
                    <div class="form-group">
                        <label>姓名</label>
                        <input type="text" class="form-control" asp-for="Name" readonly>
                    </div>
                    <div class="form-group">
                        <label>预约时间</label>
                        <input type="text" class="form-control" placeholder="请输入预约时间" asp-for="AppointmentTime" />
                    </div>

                    <div class="form-group">
                        <label>备注</label>
                        <textarea asp-for="Remark" class="form-control" placeholder="请输入备注"></textarea>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">提交</button>
                    <a asp-action="List" class="btn btn-default">返回列表</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section styles {
    <link href="~/lib/bootstrap-daterangepicker/daterangepicker.min.css" rel="stylesheet" /> 
}

@section scripts {
    <script src="~/lib/bootstrap-daterangepicker/moment.min.js"></script>
    <script src="~/lib/bootstrap-daterangepicker/daterangepicker.min.js"></script> 
    <script>
        $("input[name='AppointmentTime']").daterangepicker({
            singleDatePicker: true,
            timePicker: true,
            locale: {
                format: 'YYYY-MM-DD HH:mm',
                applyLabel: '确定',
                cancelLabel: '取消',
                daysOfWeek: ['日', '一', '二', '三', '四', '五', '六'],
                monthNames: ['一月', '二月', '三月', '四月', '五月', '六月',
                    '七月', '八月', '九月', '十月', '十一月', '十二月'],
                firstDay: 1
            }
        }); 
    </script>
}