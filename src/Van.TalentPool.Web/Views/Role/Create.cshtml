@model Van.TalentPool.Web.Models.RoleViewModels.CreateOrEditRoleViewModel

@{
    ViewData["PageHeader"] = "角色管理";
    ViewData["Title"] = "创建一个新的角色记录";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">@ViewData["Title"]</h5>
    </div>
    <form role="form" asp-action="Create" method="post">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-12">
                    <label>名称</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label>显示名称</label>
                    <input type="text" asp-for="DisplayName" class="form-control" />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Active">
                        <label class="form-check-label" asp-for="Active">是否可用</label>
                    </div>
                </div> 
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">提交</button>
            <a asp-action="List" class="btn btn-default">返回列表</a>
        </div>
    </form>
</div>
